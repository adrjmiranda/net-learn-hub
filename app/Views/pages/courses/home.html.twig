{% extends '/components/users/base.html.twig' %}
{% block content %}
<div id="course-home">
  <img src="{{ base_url }}/public/images/NetLearnHubLogo.png" alt="Logo">
  {% if courses %}
  <div>
    {% for course in courses %}
    <span>{{ course.title }}</span>
    <span>{{ course.description }}</span>
    <span>{{ course.image }}</span>
    <br>
    {% endfor %}
  </div>
  {% else %}
  <p>Sem cursos ainda!</p>
  {% endif %}
</div>
{% endblock %}